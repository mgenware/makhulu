{
  "name": "makhulu",
  "version": "1.2.2",
  "description": "Simple and parallel Node.js task runner",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/makhulu",
  "bugs": "https://github.com/mgenware/makhulu/issues",
  "keywords": [
    "task runner"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/makhulu.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "mocha --require source-map-support/register dist_tests/**/*.test.js",
    "build": "yarn test",
    "compile": "tsc -b tests",
    "dev": "yarn run clean && tsc -b tests -w",
    "prepublishOnly": "yarn run test",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "rimraf dist && rimraf dist_tests"
  },
  "engines": {
    "node": ">=8.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/pretty-ms": "^5.0.1",
    "@types/progress": "^2.0.3",
    "it-throws": "^3.2.0",
    "mocha": "^6.2.2",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "fast-glob": "^3.1.1",
    "make-dir": "^3.0.0",
    "node-filter-async": "^1.1.3",
    "pretty-ms": "^5.1.0",
    "progress": "^2.0.3",
    "throw-if-arg-empty": "^2.2.0"
  }
}
