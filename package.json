{
  "name": "makhulu",
  "version": "0.1.1",
  "description": "Simple and parallel Node.js task runner",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/makhulu",
  "bugs": "https://github.com/mgenware/makhulu/issues",
  "keywords": [
    "task runner"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/makhulu.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "jest",
    "build": "yarn test",
    "compile": "tsc -b tests",
    "dev": "yarn run clean && tsc -b tests -w",
    "prepublishOnly": "yarn run test",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "rimraf dist && rimraf dist_tests"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/make-dir": "^1.0.3",
    "@types/node": "^10.12.5",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "fast-glob": "^2.2.3",
    "make-dir": "^1.3.0",
    "node-filter-async": "^1.0.1",
    "throw-if-arg-empty": "^1.0.1"
  }
}
