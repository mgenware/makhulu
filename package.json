{
  "name": "makhulu",
  "version": "1.1.2",
  "description": "Simple and parallel Node.js task runner",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/makhulu",
  "bugs": "https://github.com/mgenware/makhulu/issues",
  "keywords": [
    "task runner"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/makhulu.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "jest",
    "build": "yarn test",
    "compile": "tsc -b tests",
    "dev": "yarn run clean && tsc -b tests -w",
    "prepublishOnly": "yarn run test",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "rimraf dist && rimraf dist_tests"
  },
  "engines": {
    "node": ">=8.5.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "testRegex": "/dist_tests/.*(\\.|/)(test|spec)\\.jsx?$"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/make-dir": "^1.0.3",
    "@types/node": "^10.12.21",
    "@types/pretty-ms": "^4.0.0",
    "@types/progress": "^2.0.3",
    "jest": "^24.1.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "ansi-colors": "^3.2.3",
    "fast-glob": "^2.2.6",
    "make-dir": "^2.0.0",
    "node-filter-async": "^1.1.1",
    "pretty-ms": "^4.0.0",
    "progress": "^2.0.3",
    "throw-if-arg-empty": "^1.0.1"
  }
}
